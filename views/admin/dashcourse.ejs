<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="css/course.css">
    <link rel="stylesheet" href="css/dashbg.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Dashboard</title>
</head>

<body>
    <a class="backhome fixed-top" href="/admin">Home</a>
    <div class="color color-1"></div>
    <div class="color color-2"></div>
    <div class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">Header</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="courseheader" method="post">
                    <label for="heading">Heading</label>
                    <input type="text" name="heading" id="heading"> <br><br>
                    <input type="submit" value="Update">
                </form>
            </div>
        </div>
    </div>

    <div id="he" class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">Holy Quran</h1>
            </div>
        </div>
        <div  class="row">
            <div class="col-12">
                <form action="holyquranh" method="post">
                    <label for="heading">Heading</label>
                    <input type="text" name="heading" id="heading"><br><br>
                    <input type="submit" value="Update">
                </form>
            </div>
        </div>
    </div>
    <div class="container fullbox">
        <div class="row">
            <div class="col-12 mt-5">
                <form class="mt-3" action="holyquranp" method="post">
                    <label for="paragraph">Paragraph</label>
                    <input type="text" name="paragraph" id="paragraph"><br><br>
                    <input type="submit" value="Add New">
                </form>
            </div>
        </div>
    </div>
    <div id="pe" class="container blog ">
        <div class="row ">
            <div class="col-12 my-5 ">
                <%for(let i=0 ; i<holyquran.length ; i++) {%>
                <p id="rlt"><%= holyquran[i].paragraph %> <span><a id="link"
                    href="holyquranremove?id=<%=holyquran[i]._id%>">Remove</a><a id="edit"
                    href="holyquran?id=<%=holyquran[i]._id%>">Edit</a></span></p><br>
                <%}%>
            </div>
        </div>
    </div>

    <!-- &&&&&&&&&&&&&&&&&&&&&& reg &&&&&&&&&&&&&&&&&&&&& -->


    <div class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">
                    Register Box
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="courseregdata" method="post" enctype="multipart/form-data">
                    <label for="heading">Heading</label>
                    <input type="text" name="heading" id="heading" ><br><br>
                    <label for="image">Image</label>
                    <input type="file" name="image" id="image"><br><br>
                    <input type="submit" value="Update">
                </form>
            </div>
        </div>
    </div>

    <div id="regi" class="register">
        <img src="image/<%= coursereg[0].image %>" alt="<%= coursereg[0].image %>">
        <div class="container h-100 ">
            <div class="row h-100 align-content-center">
                <div class="col-12">
                    <h1>
                        <%= coursereg[0].heading%>
                    </h1>
                    <a class="gbtn" href="./registration.html">Register Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- &&&&&&&&&&&&&&&&&&&&&&&& fee &&&&&&&&&&&&&&&&&&& -->


    <div class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">Fee Structure</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="feestructure" method="post">
                    <label for="heading">Heading</label>
                    <input type="text" name="heading" id="heading"><br><br>
                    <label for="p1">Line One</label>
                    <input type="text" name="p1" id="p1"><br><br>
                    <label for="p2">Line Two</label>
                    <input type="text" name="p2" id="p2"><br><br>
                    <label for="amount">Amount per Month</label>
                    <input type="text" name="amount" id="amount"><br><br>
                    <input type="submit" value="Add New">
                </form>
            </div>
        </div>
    </div>
        <div id="fee" class="container fee mt-5 pt-5 ">
            <div class="row pt-5 d-flex justify-content-center">
                <%for(let i=0 ; i<fee.length ; i++) {%>
                    <div id="rlt" class="col-4 br">
                        <div class="row one">
                            <div class="col-12">
                                <h1>
                                    <%= fee[i].heading %>
                                </h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12"><a id="link" href="feeremove?id=<%=fee[i]._id%>">Remove</a><a id="edit" href="coursefee?id=<%=fee[i]._id%>">Edit</a></div>
                        </div>
                        <div class="row ms-2 mt-4 two">
                            <div class="col-1 dot"><span></span></div>
                            <div class="col-11">
                                <p>
                                    <%= fee[i].p1 %>
                                </p>
                            </div>
                        </div>
                        <div class="row ms-2 two">
                            <div class="col-1 dot"><span></span></div>
                            <div class="col-11">
                                <p>
                                    <%= fee[i].p2 %>
                                </p>
                            </div>
                        </div>
                        <div class="row three py-5 text-center d-flex justify-content-center">
                            <div class="col-6">
                                <h3>
                                    <%= fee[i].amount %> USD
                                        / month
                                </h3>
                            </div>
                        </div>
                        <div class="row four mb-4 d-flex justify-content-center">
                            <div class="col-5"><a href="#book" class="ybtn">Pay Now</a></div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>


</body>

</html>