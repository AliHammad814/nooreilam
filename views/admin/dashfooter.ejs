            <div class="col-12">
                <form action="newicon" method="post">
                    <label for="icon">Icon Input</label>
                    <input type="text" name="icon" id="icon"><br><br>
                    <label for="route">Route</label>
                    <input type="text" name="route" id="route"><br><br>
                    <input type="submit" value="Add New Icon">
                </form>
            </div>
        </div>
    </div>
    <div id="line1icon" class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th>Icon</th>
                            <th>Route</th>
                            <th>Edit</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=0 ; i<line1icon.length ; i++) {%>
                            <tr>
                                <td><i class=" <%= line1icon[i].icon %> "></i></td>
                                <td><%= line1icon[i].route %></i></td>
                                <td><a href="footeredit?id=<%=line1icon[i]._id%>">Edit</a></td>
                                <td><a href="line1iconremove?id=<%=line1icon[i]._id%>">Remove</a></td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

