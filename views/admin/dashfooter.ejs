<body>
    <a class="backhome fixed-top" href="/admin">Home</a>
    <div class="color color-1"></div>
    <div class="color color-2"></div>
    <div class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">Line 1</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="line1" method="post">
                    <label for="logo">Logo</label>
                    <input type="text" value="Noor-e-Ilam" name="logo"><br><br>
                    <label for="route">Route</label>
                    <input type="text" value="home" name="route"><br><br>
                    <label for="heading">Heading</label>
                    <input type="text" value="Easy to learn Quran for everyone" name="heading" id="heading"><br><br>
                    <input type="submit" value="Update">
                </form>
            </div>
        </div>
    </div>
    <div class="container fullbox">
        <div class="row">
            <div class="col-12">
                <h1 id="mainheading">Line 1 Icon</h1>
            </div>
        </div>
